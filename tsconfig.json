{
  "compilerOptions": {
    // Target and Module
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    
    // Output
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "removeComments": true,
    
    // Module Resolution
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    
    // Type checking
    "strict": false,  // disabled for dev speed
    "noImplicitAny": false,  // allow any for now
    "noImplicitReturns": false,  // optional returns
    "noImplicitThis": true,  // keep for quality
    "noUnusedLocals": false,  // allow unused vars
    "noUnusedParameters": false,  // allow unused params
    "allowUnusedLabels": false,  // prevent unused labels
    "allowUnreachableCode": false,  // prevent unreachable code
    
    // Advanced
    "experimentalDecorators": true,  // for decorators
    "emitDecoratorMetadata": true,
    
    // Path aliases
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/api/*": ["api/*"],
      "@/core/*": ["core/*"],
      "@/infrastructure/*": ["infrastructure/*"],
      "@/shared/*": ["shared/*"],
      "@/config/*": ["config/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true  // faster builds
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist", 
    "**/*.test.ts", 
    "**/*.spec.ts",
    "coverage"
  ]
}