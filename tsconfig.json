{
  "compilerOptions": {
    // Target and Module
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    
    // Output
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "removeComments": true,
    
    // Module Resolution
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    
    // Type Checking - Relaxed but still professional
    "strict": false,  // Disabled strict mode to reduce friction
    "noImplicitAny": false,  // Allow implicit any for faster development
    "noImplicitReturns": false,  // Don't require return statements in all paths
    "noImplicitThis": true,  // Keep this for better code quality
    "noUnusedLocals": false,  // Allow unused variables during development
    "noUnusedParameters": false,  // Allow unused parameters
    "allowUnusedLabels": false,  // Prevent unused labels (good practice)
    "allowUnreachableCode": false,  // Prevent unreachable code (good practice)
    
    // Advanced
    "experimentalDecorators": true,  // Useful for frameworks like Express with decorators
    "emitDecoratorMetadata": true,
    
    // Path Mapping - Shows architectural thinking
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/api/*": ["api/*"],
      "@/core/*": ["core/*"],
      "@/infrastructure/*": ["infrastructure/*"],
      "@/shared/*": ["shared/*"],
      "@/config/*": ["config/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true  // Faster compilation during development
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist", 
    "**/*.test.ts", 
    "**/*.spec.ts",
    "coverage"  // Exclude coverage reports
  ]
}